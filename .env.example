# Django Settings
# SECURITY WARNING: Generate a strong secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated list)
# Example: localhost,127.0.0.1,.onrender.com,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated list)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
# For local development with SQLite, you can leave this empty
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# JWT Token Settings (in days)
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Render.com specific (only needed for deployment)
RENDER_EXTERNAL_HOSTNAME=

# Django Superuser (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme123
